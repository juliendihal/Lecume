            <small>error message</small>
        </div>


        <div>
            {{ form_widget(userForm.submit  , {'attr' : {'class': ' btn btn-primary mt-2'}, 'label': 'enregistrer'}) }}
        </div>

    </div>
    </div>
    </div>


    {{ form_end(userForm) }}

